{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
	"space-before-function-paren": ["error", "never"],
	"spaced-comment": ["error", "always"],
	"comma-spacing": ["error"],
	"no-unused-vars": "off",
	"no-console": "off",
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
	"object-curly-spacing": ["error", "never"],
	"array-bracket-spacing": ["error", "never"]
    }
}
