{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
    "space-before-function-paren": ["error", "never"],    
	"spaced-comment": ["error", "always"],
	"comma-spacing": ["error"],
	"no-unused-vars": "off", 
	"no-console": "off",
        "indent": ["error", 4],
        "quotes": ["error", "double"], // always enfore double quotes for string
        "semi": ["error", "always"], // always enforce semi-colons
	"object-curly-spacing": ["error", "never"],
	"array-bracket-spacing": ["error", "never"]
    }
}
